<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input
      type="text"
      class="form-control"
      name="postTitle"
      autocomplete="off"
    />

    <label>Post</label>
    <textarea
      name="postBody"
      class="form-control"
      rows="5"
      cols="30"
      autocomplete="off"
    ></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>
